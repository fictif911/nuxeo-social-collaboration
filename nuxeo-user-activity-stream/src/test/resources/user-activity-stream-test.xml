<component name="org.nuxeo.ecm.social.user.activity.test">


  <extension target="org.nuxeo.runtime.datasource" point="datasources">
    <datasource name="jdbc/nxactivities"  xaDataSource="org.h2.jdbcx.JdbcDataSource"
      maxActive="20" maxIdle="5">
      <property name="URL">jdbc:h2:mem:activity;DB_CLOSE_DELAY=-1</property>
      <property name="username">sa</property>
      <property name="password"></property>
    </datasource>
  </extension>
  
    <extension target="org.nuxeo.runtime.datasource" point="datasources">
    <datasource name="jdbc/repository_test"  xaDataSource="org.h2.jdbcx.JdbcDataSource"
      maxActive="20" maxIdle="5">
      <property name="URL">jdbc:h2:mem:repository;DB_CLOSE_DELAY=-1</property>
      <property name="username">sa</property>
      <property name="password"></property>
    </datasource>
  </extension>

  <extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory"
    point="directories">

    <directory name="actorRelationshipDirectory" remove="true" />

    <directory name="actorRelationshipDirectory">
      <schema>actor_relationship</schema>
      <dbDriver>${nuxeo.test.vcs.driver}</dbDriver>
      <dbUrl>${nuxeo.test.vcs.url}</dbUrl>
      <dbUser>${nuxeo.test.vcs.user}</dbUser>
      <dbPassword>${nuxeo.test.vcs.password}</dbPassword>
      <cacheTimeout>3600</cacheTimeout>
      <cacheMaxSize>1000</cacheMaxSize>
      <table>actor_relationship</table>
      <idField>id</idField>
      <autoincrementIdField>true</autoincrementIdField>
      <createTablePolicy>on_missing_columns</createTablePolicy>
      <substringMatchType>subany</substringMatchType>
    </directory>

  </extension>

  <extension target="org.nuxeo.ecm.social.relationship.service.RelationshipService"
    point="relationshipKinds">
    <kind group="circle" name="friends" label="%s is friend with %s" />
    <kind group="circle" name="coworkers" label="%s works with %s" />
  </extension>

  <extension target="org.nuxeo.ecm.activity.ActivityStreamService"
    point="activityStreams">

    <activityStream name="userActivityStream">
      <verbs append="true">
        <verb>circle</verb>
        <verb>documentModified</verb>
        <verb>documentRemoved</verb>
      </verbs>
      <relationshipKinds append="true">
        <relationshipKind>circle</relationshipKind>
        <relationshipKind>socialworkspace:members</relationshipKind>
      </relationshipKinds>
    </activityStream>

  </extension>

</component>
